rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- Transactions ---
    match /transactions/{transactionId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId)
                     && request.resource.data.keys().hasAll(['userId', 'merchant', 'amount', 'date', 'category', 'type', 'currency']);
      allow update: if isOwner(resource.data.userId)
                     && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['userId']);
      allow delete: if isOwner(resource.data.userId);
    }

    // --- Cravings ---
    match /cravings/{cravingId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId)
                     && request.resource.data.keys().hasAll(['userId', 'items', 'totalAmount', 'outcome', 'cravedAt']);
      allow update: if isOwner(resource.data.userId)
                     && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['userId']);
      allow delete: if isOwner(resource.data.userId);
    }

    // --- Products ---
    match /products/{productId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
      allow update: if isOwner(resource.data.userId)
                     && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['userId']);
      allow delete: if isOwner(resource.data.userId);
    }

    // --- Price History ---
    match /priceHistory/{priceId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId);
    }

    // --- Recurring Transactions ---
    match /recurringTransactions/{recurringId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId)
                     && request.resource.data.keys().hasAll(['userId', 'merchant', 'amount', 'category', 'type', 'frequency', 'startDate']);
      allow update: if isOwner(resource.data.userId)
                     && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['userId']);
      allow delete: if isOwner(resource.data.userId);
    }

    // --- Budgets ---
    match /budgets/{budgetId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId)
                     && request.resource.data.keys().hasAll(['userId', 'category', 'amount', 'period']);
      allow update: if isOwner(resource.data.userId)
                     && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['userId']);
      allow delete: if isOwner(resource.data.userId);
    }

    // --- Buying List ---
    match /buyingList/{itemId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId)
                     && request.resource.data.keys().hasAll(['userId', 'name', 'isBought']);
      allow update: if isOwner(resource.data.userId)
                     && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['userId']);
      allow delete: if isOwner(resource.data.userId);
    }
    
    // --- User Profiles ---
    match /userProfiles/{userId} {
      allow read, write: if isOwner(userId);
    }

    // --- Merchant Rules ---
    match /merchantRules/{ruleId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId)
                     && request.resource.data.keys().hasAll(['userId', 'originalName', 'renamedTo']);
      allow update: if isOwner(resource.data.userId)
                     && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['userId']);
      allow delete: if isOwner(resource.data.userId);
    }

    // --- Wallets ---
    match /wallets/{walletId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId)
                     && request.resource.data.keys().hasAll(['userId', 'name', 'type']);
      allow update: if isOwner(resource.data.userId)
                     && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['userId']);
      allow delete: if isOwner(resource.data.userId);
    }

    // Legacy collection names for backward compatibility
    match /buying_list/{itemId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId);
    }

    match /merchant_rules/{ruleId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId);
    }

    match /recurring_transactions/{recurringId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId);
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
  }
}